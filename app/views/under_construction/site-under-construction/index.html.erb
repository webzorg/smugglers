<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta name="generator" content=
  "HTML Tidy for Linux/x86 (vers 25 March 2009), see www.w3.org" />
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

  <!-- <meta http-equiv="refresh" content="60"> -->

  <title><%= @info['site_title'] %></title>

  <%= javascript_include_tag "under_construction" %>
  <%= stylesheet_link_tag "under_construction", :media => "all" %>

  <script type="text/javascript">
  $(function () {
  var austDay = new Date("<%= Chronic.parse(@launch_time).to_s(:rfc822) %>");
    $('#defaultCountdown').countdown({until: austDay, layout: '{dn} {dl}, {hn} {hl}, {mn} {ml}, and {sn} {sl}'});
    $('#year').text(austDay.getFullYear());
    });
  </script><!-- jquery slider -->

  <script type="text/javascript">
  $(function() {
    $("#slidertext").jCarouselLite({
        btnNext: ".next",
        btnPrev: ".prev"
    });
  });
  </script><!--script for IE6-image transparency recover-->
  <!--[if IE 6]>
    <script type="text/javascript" src="js/DD_belatedPNG_0.0.7a-min.js"></script>
    <script>
      /* EXAMPLE */
      DD_belatedPNG.fix('#logo img,#main,.counter,.twitter,.flickr,.facebook,.youtube,.skype,.stumbleupon, #submit,.prev img,.next img,#email');
    </script>
  <![endif]-->
  <script type="text/javascript">
      var show_alert = {
        show: function() {
          if ($('div.subcontainer').css('margin-top') == '0px') {
              $('div.subcontainer').animate({
                  'margin-top': '-100px',
              });
          } else {
            $('div.subcontainer').animate({
                'margin-top': '0px',
            });
          };
        },
      };
  </script>
</head>

<body>
  <div class="container">
    <%= view_flash_messages unless view_flash_messages.blank?  %>
    <div id="header">
      <div id="logo">
        <a href="/under_construction">
          <img src="<%= @info['logo_url'] %>"></img>
        </a>
      </div><!--end logo-->

      <div id="contact_details">
        <p><%= link_to @info['email'], "#" %></p>

   
      </div><!--end contact details-->
    </div><!--end header-->

    <div style="clear:both"></div>

    <div id="main">
      <div id="content">
        <div class="text">
          <h2><%= @info['heading'] %></h2>
        </div><!--end text-->

      </div><!--end content-->

      <p class="copyright">
      <%= raw @info['copyright'] + " Smugglers" %></p>
    </div><!--end main-->
  </div><!--end class container-->
</body>
</html>
