      <%= link_to product_path(product) do%>
        <%= image_tag product.image.url(:thumb), class: "thumb"  %>
        <%= content_tag(:span, product.display, class:"display")%>
        <%= content_tag(:span, "#{product.price} áƒš", class:"price #{"old_price" if product.discount}")%>
