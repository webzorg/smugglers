      <li><input type="checkbox" id="ID"><label for="ID" name="NAME" value="VALUE">Label</label></li>
      <!-- Other items -->
    </ul>
  </div>

  <%= submit_tag "Filter", class: "btn btn-primary"%>
<% end %>

<br />

  <% @products.each do |product| %>
