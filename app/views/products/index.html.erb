<div class="container">

<%= form_tag(products_path, method: "get", class: "bottlefilter") do %>
  <div class="btn-group" data-toggle="buttons">
    <%= label_tag nil, class: "btn btn-primary #{filterActive("giftbox")}" do%>
      <%= check_box_tag "giftbox", "true", giftbox("true")%>Giftbox
    <% end %>
  </div>


  <%= submit_tag "Filter", class: "btn btn-primary"%>
<% end %>

<br />

  <% @products.each do |product| %>
    <div class="item_wrapper">
      <%= link_to product_path(product) do%>
        <%= image_tag product.image.url(:thumb), class: "thumb"  %>
      <%= content_tag(:span, product.display, class:"display")%>
      <% end %>
      <%= content_tag(:span, "#{product.price} áƒš", class:"price")%>
    </div>
  <% end %>
  <br/>

</div>

<div>
   <br/>
   <%= paginate @products %>
  <br/>
  <%= link_to 'Home', root_path%>
  </div>

<script type="text/javascript">
  $(document).ready(function() {
    $(".dropdown-toggle").dropdown();
});
</script>
