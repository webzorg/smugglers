    <%= label_tag nil, class: "btn btn-primary #{filterActive("giftbox")}" do%>
      <%= check_box_tag "giftbox", "true", giftbox("true")%>Giftbox
    <% end %>
  </div>

  <div class="btn-group">
  <button data-toggle="dropdown" class="btn dropdown-toggle"  data-placeholder="Please select">Checked option <span class="caret"></span></button>
