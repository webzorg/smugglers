<h1>Listing Admin Products</h1>

<table>
  <thead>
    <tr>
      <th>Sku</th>
      <th>Price</th>
      <th>Display</th>
      <th>Volume</th>
      <th>Brand</th>
      <th>Giftbox</th>
      <th>Subcategory</th>
      <th>Country</th>
      <th>Region</th>
      <th>Category</th>
      <th>Age</th>
      <th>Abv</th>
      <th>Image</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.sku %></td>
        <td><%= product.price %></td>
        <td><%= product.display %></td>
        <td><%= product.volume %></td>
        <td><%= product.brand %></td>
        <td><%= product.giftbox %></td>
        <td><%= product.subcategory %></td>
        <td><%= product.country %></td>
        <td><%= product.region %></td>
        <td><%= product.category %></td>
        <td><%= product.age %></td>
        <td><%= product.abv %></td>
        <td><%= product.description %></td>
        <td><%= product.status %></td>
        <td><%= image_tag product.image.url(:thumb) %></td>
        <td><%= link_to 'Show', product %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />


<%= link_to 'Home', root_path%>
